# Tindi Tech E-commerce - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============== APPLICATION SETTINGS ==============
FLASK_ENV=development
# Options: development, production
# NOTE: Debug mode is ONLY enabled when FLASK_ENV=development

FLASK_SECRET_KEY=your-secret-key-here-generate-a-random-string
# Generate a secure random key with: python -c "import secrets; print(secrets.token_hex(32))"

# ============== DATABASE CONFIGURATION ==============
MONGODB_USERNAME=your-mongodb-username
MONGODB_PASSWORD=your-mongodb-password
MONGODB_CLUSTER=your-cluster-url.mongodb.net
# Example cluster: cluster0.zrebje6.mongodb.net

# ============== ADMIN REGISTRATION CODES ==============
SUPER_ADMIN_CODE=YourSuperAdminCode2025
# This code allows users to register as super admin

ADMIN_CODE=YourStaffCode2025
# This code allows users to register as regular admin

# ============== SECURITY SETTINGS ==============
TOKEN_EXPIRATION_HOURS=24
# How long authentication tokens remain valid (in hours)

# ============== CORS SETTINGS ==============
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:5500
# Comma-separated list of allowed origins for development
# For production, use your actual domain: https://yourdomain.com

# ============== RATE LIMITING ==============
RATE_LIMIT_ENABLED=true
# Enable/disable rate limiting globally

LOGIN_RATE_LIMIT=5 per minute
# Maximum login attempts per IP address

API_RATE_LIMIT=100 per hour
# General API rate limit per IP address
